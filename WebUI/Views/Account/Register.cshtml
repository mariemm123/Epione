@using Domain
@using WebUI.Controllers
@model WebUI.Models.AccountViewModels.RegisterViewModel
 @{ Layout = "~/Views/Shared/_LayoutRegisterLogin.cshtml";}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Epione</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/adminlte/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome
    <link rel="stylesheet" href="~/adminlte/font-awesome/css/font-awesome.min.css">-->
    <!-- Ionicons
    <link rel="stylesheet" href="~/adminlte/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/AdminLTE.css">
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect. -->
    <link rel="stylesheet" href="~/adminlte/dist/css/skins/skin-blue.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

<body class="hold-transition register-page"  style="background-image: url('../adminlte/dist/img/wallpaper2.jpg')">
    <div class="register-box">
     
        <div class="register-box-body">
        <div>
            <a href="#" style="color:cadetblue">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<h2><b>Epione</b>Health Space</h2></a>
            </div>
        <div>
            <a href="#"><h3 style="color:aqua">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;S'inscrire</h3></a>
            </div>
           @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
           {    

            @Html.AntiForgeryToken()
      
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group has-feedback">
                <div class="input-group">

                    @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", @style = "width: 340px;", @placeholder = "Prenom" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
            </div>
            <div class="form-group has-feedback">
                <div class="input-group">

                    @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", @style = "width: 340px;", @placeholder = "Nom" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
            </div>
                <div class="form-group has-feedback">
                    <div class="input-group">
                       
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width: 340px;", @placeholder = "Email" })
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    </div>
                    <div class="form-group has-feedback">
                        <div class="input-group">

                            @Html.TextBoxFor(m => m.address.country, new { @class = "form-control", @style = "width: 340px;", @placeholder = "Pays" })
                            <span class="glyphicon glyphicon-font form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <div class="input-group">

                            @Html.TextBoxFor(m => m.address.city, new { @class = "form-control", @style = "width: 340px;", @placeholder = "Ville" })
                            <span class="glyphicon glyphicon-font form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <div class="input-group">

                            @Html.TextBoxFor(m => m.address.Street, new { @class = "form-control", @style = "width: 340px;", @placeholder = "Rue" })
                            <span class="glyphicon glyphicon-font form-control-feedback"></span>
                        </div>
                    </div>
                <div class="form-group has-feedback">
                    <div class="input-group">
                       
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "width: 340px;", @placeholder = "Mot de passe" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    </div>
                <div class="form-group has-feedback">
                    <div class="input-group">
                       
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "width: 340px;", @placeholder = "Confirmer Mot De Passe" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                    </div>
                <div class="form-group">
            
                    <div class="col-md-10">
                        @Html.Label("Patient: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, EAccountType.Patient, new { @checked = "checked" })
                        @Html.Label("Docotr: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, EAccountType.Doctor)
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
           }
            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Coming soon Sign up using Facebook</a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Coming soon Sign up using Google+</a>
            </div>
           
        </div><!-- /.form-box -->
    </div><!-- /.register-box -->
    <!-- jQuery 2.1.4 -->
    <script src="../../plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="../../bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="../../plugins/iCheck/icheck.min.js"></script>
    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
    <!-- ./wrapper -->
    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 3 -->
    <script src="~/adminlte/plugins/jquery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/adminlte/bootstrap/js/bootstrap.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminlte/dist/js/app.js"></script>
    <!-- Optionally, you can add Slimscroll and FastClick plugins.
         Both of these plugins are recommended to enhance the
         user experience. -->

</body>

